<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context=".homeP">


    <ImageView
        android:id="@+id/imageViewProduct"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/p"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="70dp"

        android:paddingTop="20dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="CATAGORIES"
            android:textAlignment="center"
            android:textColor="@color/black"

            android:textSize="25dp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="2dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/textViewCat1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="50"
                    android:background="@drawable/rounded_background"
                    android:elevation="8dp"
                    android:padding="20dp"
                    android:shadowColor="#80000000"
                    android:shadowDx="4"
                    android:shadowDy="5"
                    android:shadowRadius="8"
                    android:text="ISLAMIC"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewCat2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="50"
                    android:background="@drawable/rounded_background"
                    android:elevation="8dp"
                    android:padding="20dp"
                    android:shadowColor="#80000000"
                    android:shadowDx="4"
                    android:shadowDy="5"
                    android:shadowRadius="8"
                    android:text="SPORTS"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="2dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/textViewCat3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="50"
                    android:background="@drawable/rounded_background"
                    android:elevation="8dp"
                    android:padding="20dp"
                    android:shadowColor="#80000000"
                    android:shadowDx="4"
                    android:shadowDy="5"
                    android:shadowRadius="8"
                    android:text="SCIENCE"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewCat4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="50"
                    android:background="@drawable/rounded_background"
                    android:elevation="8dp"
                    android:padding="20dp"
                    android:shadowColor="#80000000"
                    android:shadowDx="4"
                    android:shadowDy="5"
                    android:shadowRadius="8"
                    android:text="CSE"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="2dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/textViewCat5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="50"
                    android:background="@drawable/rounded_background"
                    android:elevation="8dp"
                    android:padding="20dp"
                    android:shadowColor="#80000000"
                    android:shadowDx="4"
                    android:shadowDy="5"
                    android:shadowRadius="8"
                    android:text="LANGUAGE"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewCat6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="50"
                    android:background="@drawable/rounded_background"
                    android:elevation="8dp"
                    android:padding="20dp"
                    android:shadowColor="#80000000"
                    android:shadowDx="4"
                    android:shadowDy="5"
                    android:shadowRadius="8"
                    android:text="HISTORY"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/btnmenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#008000"
            android:layout_marginTop="25dp"
            android:padding="6dp"
            android:textAlignment="center"
            android:textStyle="bold"
            app:cornerRadius="20dp"
            android:text="Back Menu"
            />


    </LinearLayout>

</LinearLayout>


