
<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background"
        android:orientation="vertical"
        tools:context=".bookDetail">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_background"
                android:elevation="8dp"
                android:padding="20dp"
                android:shadowColor="#80000000"
                android:shadowDx="4"
                android:shadowDy="5"
                android:shadowRadius="8">

                <ImageView
                    android:id="@+id/imageViewProduct"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/book1"

                    />

                <TextView
                    android:id="@+id/textViewProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"
                    android:text="Name: Enjoy Your Life"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewProductAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"
                    android:text="Author: Dr. Muhammad Abdur Rahman"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewProductDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="8dp"
                    android:text="Description: Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed et accumsan metus. Quisque quis commodo quam."
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/textViewProductPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price: 500/="
                    android:textSize="13sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/textViewProductAbility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ability:In Stock "
                    android:textSize="13sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/textViewProductLength"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Length: 454 Pages"
                    android:textSize="13sp"
                    android:textStyle="bold" />



                <TextView
                    android:id="@+id/textViewDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Release Date:23.01.2022"
                    android:textSize="13sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/textViewGenre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Genre: None "
                    android:textSize="13sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/textViewQuality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Page Quality: Premium"
                    android:textSize="13sp"
                    android:textStyle="bold" />



                <TextView
                    android:id="@+id/textViewProductPReview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Ratings: 5"
                    android:textSize="13sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/textViewProductReview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Review: Best Book. Nice service. Book page quality Premium."
                    android:textStyle="bold" />


            </LinearLayout>


            <Button
                android:id="@+id/buttonAddToCart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="#008000"
                android:drawablePadding="6dp"
                android:padding="6dp"
                android:text="Add to Cart"
                android:textAlignment="center"
                android:textStyle="bold"
                app:cornerRadius="25dp" />

            <Button
                android:id="@+id/buttonBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="#008000"
                android:drawablePadding="6dp"
                android:padding="6dp"
                android:text="GO BACK"
                android:textAlignment="center"
                android:textStyle="bold"
                app:cornerRadius="25dp" />


        </LinearLayout>


    </LinearLayout>