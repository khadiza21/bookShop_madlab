                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewAuthorName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Author: Dr. Muhammad "
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewPrice2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price: $19.99"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewOfferRate2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Offer Rate: 20%"
