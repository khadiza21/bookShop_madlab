<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#ffffff"/> <!-- Background color -->
    <corners android:radius="30dp"/> <!-- Corner radius -->
    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:right="1dp" android:left="1dp" android:bottom="1dp">
            <shape android:shape="rectangle">
                <solid android:color="#80000000" /> <!-- Semi-transparent black color -->
                <corners android:radius="12dp" /> <!-- Corner radius -->
            </shape>
        </item>
        <item android:right="0dp" android:left="0dp" android:bottom="3dp">
            <shape android:shape="rectangle">
                <solid android:color="#80000000" /> <!-- Semi-transparent black color -->
                <corners android:radius="12dp" /> <!-- Corner radius -->
            </shape>
        </item>
    </layer-list>
</shape>
